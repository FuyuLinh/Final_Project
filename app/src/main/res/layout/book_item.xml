<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idIVbook"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_search"
            android:layout_margin="3dp">
            <TextView
                android:id="@+id/idBookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:text="Book Title"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginHorizontal="4dp"/>

            <TextView
                android:singleLine="false"
                android:id="@+id/idAuthor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idBookTitle"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="6dp"
                android:padding="3dp"
                android:text="Author0"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:singleLine="false"
                android:id="@+id/idAuthor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idAuthor1"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="6dp"
                android:padding="3dp"
                android:text="Author2"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/idPageCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idAuthor2"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="6dp"
                android:padding="3dp"
                android:text="Page count"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/idTVDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idPageCount"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="4dp"
                android:padding="3dp"
                android:text="date"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>